<div class="container p-4 bg-white">
    <div class="text-center mb-3">
        <h3>Panel de Control - {{user.ad}}</h3>
    </div>
    <div class="container p-4 bg-white">
        <div class="row">
            <div class="col-md-5 mx-auto">
                
                <table class="table table-hover table-sm">
                    <thead>
                        <tr>
                            <th scope="col">Fecha de Backup</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each completo}}
                        <tr>
                            <td>
                                {{archivo}}
                            </td>
                            <td class="text-success">Encriptado</td>
                            <td>
                                <button class="btn btn-warning btn-sm" style="margin-top: 0px;" onclick="enviar('{{archivo}}')">Restaurar esta copia</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
    </div>
</div>
<script>
    function enviar(archivo){
        if (confirm("SE HARÁ UNA RESTAURACIÓN DEL SISTEM A: "+archivo+" ¿Estás de acuerdo con realizar esta acción?")) {
            // El usuario hizo clic en "Aceptar"
            console.log("El usuario está de acuerdo.", archivo);
            // Coloca aquí el código para la acción que debe realizarse
        } else {
            // El usuario hizo clic en "Cancelar"
            console.log("El usuario no está de acuerdo.", archivo);
            // Coloca aquí el código para cuando el usuario no esté de acuerdo
        }

    }
</script>